#!/usr/bin/make -f

include /usr/share/dpatch/dpatch.make

FRONTENDS = qt xforms

# This has to be exported to make some magic below work.
export DH_OPTIONS

DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

CONFIGURE_OPTIONS = \
	--host=$(DEB_HOST_GNU_TYPE) \
	--build=$(DEB_BUILD_GNU_TYPE) \
	--prefix=/usr \
	--infodir=/usr/share/info \
	--mandir=/usr/share/man \
	--disable-dependency-tracking \
	--enable-warnings \
	--disable-debug \
	--enable-optimization=$$CXXFLAGS \
	--enable-assertions \
	--enable-nls \
	--without-included-string \
	--with-aiksaurus \
	--with-gnu-ld \
	--without-pspell \
	--with-aspell \
	--with-x \
	--without-included-gettext \
	--with-frontend="$(FRONTENDS)" \
	--with-qt-dir=/usr/share/qt3 \

debian/control: debian/control.in debian/control.qt debian/control.xforms debian/control.gtk
	cp debian/control.in $@
	for i in $(FRONTENDS); do cat debian/control.$$i >> $@; done

#Architecture 
build-stamp: patch debian/control
	dh_testdir
ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp config/config.sub config/config.sub.backup
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp config/config.guess config/config.guess.backup
	cp -f /usr/share/misc/config.guess config/config.guess
endif
	sh -c "eval pod2man $(grep '^# pod2man ' debian/scripts/update-lyxrc | sed 's/^# pod2man //') debian/scripts/update-lyxrc > ./update-lyxrc.1"
	test -d build-tree || mkdir build-tree
	cd build-tree && CFLAGS="$(CFLAGS)" ../configure $(CONFIGURE_OPTIONS)
	cd build-tree && make
	touch build-stamp

build-arch: build-stamp debian/control

build-indep: build-stamp debian/control

build: build-indep build-arch

clean: unpatch debian/control
	dh_testdir
	dh_testroot

	-$(MAKE) distclean

	rm -f build-arch-stamp build-indep-stamp build-stamp
	rm -rf build-tree
	rm -f update-lyxrc.1
	mv config/config.guess.backup config/config.guess || true
	mv config/config.sub.backup config/config.sub || true

	dh_clean 

install: install-indep install-arch debian/control
install-indep: debian/control
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_installdirs -i
	dh_install -i
	chmod +x debian/lyx-common/usr/share/lyx/scripts/*
	ln -s ../../../../lyx/images/lyx.xpm \
		debian/lyx-common/usr/share/icons/hicolor/48x48/apps/lyx.xpm
	cp debian/lyx-32x32.xpm \
		debian/lyx-common/usr/share/icons/hicolor/32x32/apps/lyx.xpm

install-arch: install-indep debian/control
	dh_testdir
	dh_testroot
	dh_clean -k -s 
	dh_installdirs -s

	for i in $(FRONTENDS); do cp build-tree/lyx.1 build-tree/lyx-$$i.1; done
	for i in $(FRONTENDS); do cp debian/lyx-icon.xpm build-tree/lyx-$$i.xpm; done
	cd build-tree && make install DESTDIR=`pwd`/../debian/lyx-common/
	rm debian/lyx-common/usr/bin/lyx
	rm debian/lyx-common/usr/share/man/man1/lyx.1
	rm debian/lyx-common/usr/share/lyx/textclass.lst
	rm debian/lyx-common/usr/share/lyx/lyxrc.defaults
	rm debian/lyx-common/usr/share/lyx/lyxrc.example
	rm debian/lyx-common/usr/share/lyx/packages.lst
	rm debian/lyx-common/usr/share/lyx/lyx2lyx/profiling.py
	rm -r debian/lyx-common/usr/share/lyx/xfonts/
	mkdir -p debian/lyx-common/usr/share/texmf/tex/latex/lyx
	mv debian/lyx-common/usr/share/lyx/tex/* \
		debian/lyx-common/usr/share/texmf/tex/latex/lyx/
	rmdir debian/lyx-common/usr/share/lyx/tex/
	sed -e 's/#\\print_command dvips/\\print_command dviprint/' < lib/lyxrc.example > debian/lyx-common/etc/lyxrc
	ln -s ../../../../etc/lyxrc debian/lyx-common/usr/share/lyx/lyxrc.example

	dh_install -s
	for i in $(FRONTENDS); do \
		cp build-tree/src/lyx-$$i debian/lyx-$$i/usr/bin/lyx-$$i; \
	done

binary-common: debian/control
	dh_testdir
	dh_testroot
	dh_installchangelogs -plyx-common ChangeLog
	dh_installdocs
	dh_installmenu
	dh_installman
	dh_desktop
	for i in $(FRONTENDS); do rm -rf debian/lyx-$$i/usr/share/doc/lyx-$$i; done
	for i in $(FRONTENDS); do ln -s /usr/share/doc/lyx-common/ debian/lyx-$$i/usr/share/doc/lyx-$$i; done
	dh_link
	dh_strip
	dh_compress 
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture independant packages using the common target.
binary-indep: build-indep install-indep debian/control
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

# Build architecture dependant packages using the common target.
binary-arch: build-arch install-arch debian/control
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

binary: binary-arch binary-indep debian/control
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch

